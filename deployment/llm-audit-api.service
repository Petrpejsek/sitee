[Unit]
Description=LLM Audit Engine API Server
After=network.target postgresql.service
Requires=postgresql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/llm-audit-engine/backend
Environment="PATH=/var/www/llm-audit-engine/backend/venv/bin"
EnvironmentFile=/var/www/llm-audit-engine/backend/.env

ExecStart=/var/www/llm-audit-engine/backend/venv/bin/gunicorn app.main:app \
    --workers 4 \
    --worker-class uvicorn.workers.UvicornWorker \
    --bind 0.0.0.0:8000 \
    --timeout 120 \
    --access-logfile /var/log/llm-audit/api-access.log \
    --error-logfile /var/log/llm-audit/api-error.log \
    --log-level info

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target


