# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/llm_audit

# OpenAI Configuration
OPENAI_API_KEY=sk-your-actual-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Provider (optional)
# - openai: use OpenAI directly (OPENAI_BASE_URL=https://api.openai.com/v1, key starts sk-...)
# - openrouter: use OpenRouter (OPENAI_BASE_URL=https://openrouter.ai/api/v1, key starts sk-or-...)
LLM_PROVIDER=openai

# OpenRouter (only if LLM_PROVIDER=openrouter)
# OPENAI_API_KEY=sk-or-your-openrouter-key-here
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# For OpenRouter, model naming is usually provider-qualified, e.g.:
# OPENAI_MODEL=openai/gpt-4o
# Optional attribution headers:
# OPENROUTER_REFERER=https://your-domain.example
# OPENROUTER_TITLE=LLM Audit Engine

# Scraping Limits
MAX_PAGES_TARGET=60
MAX_PAGES_COMPETITOR=15
REQUEST_TIMEOUT=10
MAX_PAGE_SIZE_MB=5
TOTAL_SCRAPING_TIMEOUT=300

# Storage & Cleanup
REPORTS_DIR=./reports
REPORTS_RETENTION_DAYS=30

# Server URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
ENVIRONMENT=development

# Stripe Configuration (required for paywall)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_AUDIT_PRICE_ID=price_xxxxx  # Price ID for $199 one-time audit
STRIPE_STARTER_PRICE_ID=price_xxxxx  # Starter subscription price
STRIPE_GROWTH_PRICE_ID=price_xxxxx   # Growth subscription price
STRIPE_SCALE_PRICE_ID=price_xxxxx    # Scale subscription price

# JWT Configuration (for magic link authentication)
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

