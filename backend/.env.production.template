# =============================================================================
# SITEE - Production Environment Configuration Template
# =============================================================================
# 
# INSTRUKCE:
# 1. Zkopírujte tento soubor jako .env v backend/ složce na serveru
# 2. Vyplňte všechny hodnoty označené <PLACEHOLDER>
# 3. Nastavte oprávnění: chmod 600 .env
# 4. NIKDY necommitujte .env do gitu!
#
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://llm_audit_user:<DB_PASSWORD>@localhost:5432/llm_audit

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-<YOUR_OPENAI_API_KEY>
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
MAX_PAGES_TARGET=60
MAX_PAGES_COMPETITOR=15
REQUEST_TIMEOUT=10
MAX_PAGE_SIZE_MB=5
TOTAL_SCRAPING_TIMEOUT=300

# =============================================================================
# STORAGE & CLEANUP
# =============================================================================
REPORTS_DIR=/var/www/llm-audit-engine/reports
REPORTS_RETENTION_DAYS=30

# =============================================================================
# SERVER URLS
# =============================================================================
BACKEND_URL=https://<YOUR_DOMAIN>
FRONTEND_URL=https://<YOUR_DOMAIN>
CORS_ORIGINS=https://<YOUR_DOMAIN>

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_API_KEY=sk_live_<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=whsec_<YOUR_WEBHOOK_SECRET>
STRIPE_AUDIT_PRICE_ID=price_<AUDIT_PRICE_ID>
STRIPE_STARTER_PRICE_ID=price_<STARTER_PRICE_ID>
STRIPE_GROWTH_PRICE_ID=price_<GROWTH_PRICE_ID>
STRIPE_SCALE_PRICE_ID=price_<SCALE_PRICE_ID>

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=<GENERATE_RANDOM_SECRET_MIN_32_CHARS>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

# =============================================================================
# Jak vygenerovat JWT secret:
# openssl rand -hex 32
# =============================================================================
